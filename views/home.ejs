<%- include('partial/header') %>
<body>

    <div class="container">
        <header>
            <h2 class="text-center">Account</h2>
        </header>
        <% { %>
            <% if(result.message === 'Success')
             { %>
                 <!-- <h3>Your account is imported successfully.</h3> -->
                 <div>
                 </div>
                 <div class="transaction-history">
                     <h2 class="text-center">Wallet Information</h2>
                     <p><strong>Wallet Address:</strong> <%= result.Address %></p>
                     <p><strong>Balance:</strong><%= balance %> ETH</p>
                     <p><strong>Private Key:</strong><%= result.PrivateKey %></p>
                 </div>
                 <div class="transaction-history">
                        <h2>Transaction History</h2>
                        <% if (history.length !== 0) { %>
                            <ul>
                                <% history.forEach(item => { %>
                                    <li><%= item %></li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p>You don't have any transactions.</p>
                        <% } %>
                    </div>                    
             <% }
             else{ %>
                 <h3>Something went wrong while importing the account.</h3>
            <% } %>
        <% } %>
    </div>
</body>

<%- include('partial/footer') %>